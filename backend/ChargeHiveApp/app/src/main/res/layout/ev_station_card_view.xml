<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#FFFEF6"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="200dp">

        <ImageView
            android:layout_width="130dp"
            android:id="@+id/ev_station_pic"
            android:layout_margin="10dp"
            android:src="@drawable/ev_station_sample"
            android:scaleType="fitXY"
            android:layout_height="match_parent">
        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="30dp"
                android:layout_gravity="end"
                android:scaleType="fitXY"
                android:src="@drawable/battery"
                android:layout_margin="5dp"
                android:layout_height="20dp">
            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/ev_station_name"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text="EV station name"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:textSize="12sp"
                android:id="@+id/ev_station_loc"
                android:textStyle="bold|italic"
                android:text="Electric vehicle charging stationEVP, CARNIVAL CINEMAS, National Highway, Chembarambakkam, Tamil Nadu 600124"
                android:layout_height="wrap_content">

            </TextView>



            <RatingBar
                android:layout_width="wrap_content"
                android:numStars="5"
                android:id="@+id/ev_station_rating"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:rating="3.5"
                android:layout_gravity="center"
                android:theme="@style/RatingBar"
                android:layout_height="wrap_content">
            </RatingBar>

            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:id="@+id/ev_station_status"
                android:textColor="#199900"
                android:text="ðŸEV station status"
                android:layout_height="wrap_content">
            </TextView>





        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>